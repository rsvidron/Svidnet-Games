# Application
APP_NAME=SvidNet Game Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://gameuser:gamepass@localhost:5432/gamedb
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=*

# AI Integration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
AI_GENERATION_MAX_TOKENS=2048

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Game Settings
DAILY_WORDLE_RESET_HOUR=0
DEFAULT_ELO_RATING=1200
TRIVIA_TIME_LIMIT_SECONDS=30
JEOPARDY_BUZZ_WINDOW_MS=3000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=csv,json

# Email (optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@svidnet.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External APIs (for sports data)
SPORTS_API_KEY=
SPORTS_API_URL=

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
